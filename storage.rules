rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their own audio files
    match /audio/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId &&
        request.resource.contentType.matches('audio/.*') &&
        request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Allow company users and admins to access company audio files
    match /companies/{companyId}/audio/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || userHasRole('admin')) &&
        request.resource.contentType.matches('audio/.*') &&
        request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Helper function
    function userHasRole(role) {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == role;
    }
  }
}
