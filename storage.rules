rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is superAdmin
    function isSuperAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superAdmin';
    }

    // Helper function to check if user belongs to the company
    function belongsToCompany(companyId) {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    // Knowledge bases storage
    match /knowledge-bases/{allPaths=**} {
      // Skill KB: superAdmin only
      match /skill/{fileName} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
      }

      // Info KB: superAdmin only
      match /info/{fileName} {
        allow read: if isAuthenticated();
        allow write: if isSuperAdmin();
      }

      // User KB: authenticated users can upload to their own company
      match /user/{fileName} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }

      // Legacy path (for backward compatibility)
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Article audio files
    match /articles/{articleId}/{fileName} {
      allow read: if true; // Public read for published articles
      allow write: if isAuthenticated();
    }

    // Interview audio files
    match /interviews/{sessionId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Company logos
    match /company-logos/{companyId}/{fileName} {
      allow read: if true; // Public read
      allow write: if isAuthenticated() && belongsToCompany(companyId);
    }

    // User profile photos
    match /user-photos/{userId}/{fileName} {
      allow read: if true; // Public read
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Interviewer profile photos
    match /interviewers/{companyId}/{interviewerId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      // TODO: Temporarily allow all authenticated users for debugging
      // Later change to: allow write: if isAuthenticated() && belongsToCompany(companyId);
    }
  }
}

